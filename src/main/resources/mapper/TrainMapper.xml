<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ticket.system.mapper.TrainMapper">

    <resultMap id="BaseResultMap" type="com.ticket.system.entity.Train">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="train_number" property="trainNumber" jdbcType="VARCHAR"/>
        <result column="train_type" property="trainType" jdbcType="VARCHAR"/>
        <result column="start_station_id" property="startStationId" jdbcType="BIGINT"/>
        <result column="end_station_id" property="endStationId" jdbcType="BIGINT"/>
        <result column="start_time" property="startTime" jdbcType="TIME"/>
        <result column="end_time" property="endTime" jdbcType="TIME"/>
        <result column="duration" property="duration" jdbcType="INTEGER"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="insert" parameterType="com.ticket.system.entity.Train" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO train (
            train_number, train_type, start_station_id, end_station_id,
            start_time, end_time, duration, status, create_time, update_time
        ) VALUES (
                     #{trainNumber}, #{trainType}, #{startStationId}, #{endStationId},
                     #{startTime}, #{endTime}, #{duration}, #{status}, #{createTime}, #{updateTime}
                 )
    </insert>

    <update id="update" parameterType="com.ticket.system.entity.Train">
        UPDATE train
        <set>
            <if test="trainNumber != null">train_number = #{trainNumber},</if>
            <if test="trainType != null">train_type = #{trainType},</if>
            <if test="startStationId != null">start_station_id = #{startStationId},</if>
            <if test="endStationId != null">end_station_id = #{endStationId},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="duration != null">duration = #{duration},</if>
            <if test="status != null">status = #{status},</if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Long">
        DELETE FROM train WHERE id = #{id}
    </delete>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT *
        FROM train
        WHERE id = #{id}
    </select>

    <select id="selectByTrainNumber" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT *
        FROM train
        WHERE train_number = #{trainNumber}
    </select>

    <select id="selectByStartStation" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT *
        FROM train
        WHERE start_station_id = #{startStationId} AND status = 1
        ORDER BY start_time
    </select>

    <select id="selectByEndStation" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT *
        FROM train
        WHERE end_station_id = #{endStationId} AND status = 1
        ORDER BY end_time
    </select>

    <select id="selectByType" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT *
        FROM train
        WHERE train_type = #{trainType} AND status = 1
        ORDER BY train_number
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT *
        FROM train
        ORDER BY train_number
    </select>

    <select id="selectByRoute" resultMap="BaseResultMap">
        SELECT t.*
        FROM train t
                 INNER JOIN train_station ts1
                            ON t.id = ts1.train_id AND ts1.station_id = #{startStationId}
                 INNER JOIN train_station ts2
                            ON t.id = ts2.train_id AND ts2.station_id = #{endStationId}
        WHERE t.status = 1
          AND ts1.station_index &lt; ts2.station_index
        ORDER BY t.start_time
    </select>

</mapper>